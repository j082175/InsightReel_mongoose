{
  "manifest_version": 3,
  "name": "영상 자동저장 분석기",
  "version": "1.0.0",
  "description": "인스타그램, 틱톡, 유튜브 영상을 자동으로 저장하고 AI로 분석하여 구글 스프레드시트에 정리",
  
  "permissions": [
    "activeTab",
    "storage", 
    "downloads",
    "identity",
    "contextMenus",
    "notifications",
    "webRequest"
  ],
  
  "host_permissions": [
    "https://www.instagram.com/*",
    "https://www.tiktok.com/*",
    "https://www.youtube.com/*",
    "https://youtu.be/*",
    "https://sheets.googleapis.com/*",
    "http://localhost:3000/*"
  ],
  
  "background": {
    "service_worker": "background/service-worker.js"
  },
  
  "content_scripts": [
    {
      "matches": [
        "https://www.instagram.com/*",
        "https://www.tiktok.com/*",
        "https://www.youtube.com/*",
        "https://youtu.be/*"
      ],
      "js": ["content/content-script-bundled.js"],
      "css": ["content/styles.css"],
      "run_at": "document_idle"
    },
    {
      "matches": [
        "https://www.youtube.com/*",
        "https://youtu.be/*"
      ],
      "js": ["content/youtube-content.js"],
      "run_at": "document_idle"
    }
  ],
  
  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "영상 자동저장 분석기"
  },
  
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  
  "web_accessible_resources": [
    {
      "resources": ["icons/*", "popup/*"],
      "matches": ["<all_urls>"]
    }
  ]
}