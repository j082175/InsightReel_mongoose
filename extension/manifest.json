{
  "manifest_version": 3,
  "name": "InsightReel",
  "version": "1.0.0",
  "description": "InsightReel - 소셜미디어 비디오 자동 저장 및 AI 분석 도구",
  
  "permissions": [
    "activeTab",
    "storage", 
    "downloads",
    "identity",
    "contextMenus",
    "notifications",
    "webRequest"
  ],
  
  "host_permissions": [
    "https://www.instagram.com/*",
    "https://www.tiktok.com/*",
    "https://www.youtube.com/*",
    "https://youtu.be/*",
    "https://sheets.googleapis.com/*",
    "http://localhost:3000/*"
  ],
  
  "background": {
    "service_worker": "background/service-worker.js"
  },
  
  "content_scripts": [
    {
      "matches": [
        "https://www.instagram.com/*",
        "https://www.tiktok.com/*",
        "https://www.youtube.com/*",
        "https://youtu.be/*"
      ],
      "js": ["config/settings.js", "content/content-script-simple-test.js"],
      "css": ["content/styles.css"],
      "run_at": "document_idle"
    },
    {
      "matches": [
        "https://www.youtube.com/*",
        "https://youtu.be/*"
      ],
      "js": ["content/youtube-channel-analyzer-simple.js"],
      "run_at": "document_idle"
    }
  ],
  
  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "InsightReel"
  },
  
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  
  "web_accessible_resources": [
    {
      "resources": ["icons/*", "popup/*"],
      "matches": ["<all_urls>"]
    }
  ]
}