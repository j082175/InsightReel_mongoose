{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "outDir": "./dist",
    "rootDir": "./",

    // 엄격한 타입 체크 설정
    "strict": true,                          // 모든 strict 옵션 활성화
    "noImplicitAny": true,                  // any 타입 암시적 사용 금지
    "strictNullChecks": true,               // null/undefined 체크 강화
    "strictFunctionTypes": true,            // 함수 타입 체크 강화
    "strictBindCallApply": true,            // bind, call, apply 체크 강화
    "strictPropertyInitialization": true,   // 프로퍼티 초기화 체크
    "noImplicitThis": true,                 // this 타입 암시적 any 금지
    "alwaysStrict": true,                   // strict 모드 사용

    // 추가 체크 옵션
    "noUnusedLocals": true,                 // 사용안한 로컬 변수 에러
    "noUnusedParameters": true,             // 사용안한 파라미터 에러
    "noImplicitReturns": true,              // 모든 경로에서 반환값 필요
    "noFallthroughCasesInSwitch": true,     // switch문 fallthrough 방지
    "noUncheckedIndexedAccess": true,       // 인덱스 접근시 undefined 체크
    "exactOptionalPropertyTypes": true,     // 옵셔널 프로퍼티 정확한 타입

    // 모듈 설정
    "esModuleInterop": true,
    "skipLibCheck": true,                   // 라이브러리 타입 체크 건너뛰기
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,
    "checkJs": false,                       // JS 파일은 타입 체크 안 함

    // 출력 설정
    "declaration": true,                    // .d.ts 파일 생성
    "declarationMap": true,                 // .d.ts.map 파일 생성
    "sourceMap": true,
    "removeComments": false,
    "resolveJsonModule": true
  },
  "include": [
    "server/features/channel-analysis/**/*.ts",
    "server/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "frontend",
    "extension",
    "prototype",
    "tests",
    "**/*.old.ts"
  ]
}