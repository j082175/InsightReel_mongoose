{
  "name": "insightreel",
  "version": "1.0.0",
  "type": "commonjs",
  "description": "InsightReel - 자동 영상 저장 및 AI 분석 도구",
  "main": "server/index.js",
  "scripts": {
    "build:ts": "tsc",
    "dev": "npm run kill-port && node server/index.js",
    "dev-watch": "npm run kill-port && nodemon server/index.js",
    "dev:ts": "npm run kill-port && tsc --watch & nodemon dist/server/index.js",
    "start": "npm run kill-port && node server/index.js",
    "start:ts": "npm run kill-port && npm run build:ts && node dist/server/index.js",
    "kill-port": "npx kill-port 3000 || echo 'Port 3000 was already free'",
    "cleanup": "npx kill-port 3000 && npx kill-port 8000 && echo 'All ports cleaned'",
    "force-cleanup": "node scripts/force-cleanup.js",
    "build": "webpack --mode production",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest tests/unit",
    "test:integration": "jest tests/integration",
    "test:verbose": "jest --verbose",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "validate:pipeline": "node scripts/validate-data-pipeline.js",
    "validate:schemas": "node scripts/validate-schema-sync.js",
    "validate:schemas:verbose": "node scripts/validate-schema-sync.js --verbose",
    "lint:fieldmapper": "eslint --config .eslintrc-fieldmapper.js frontend/src/**/*.{ts,tsx}",
    "prestart": "npm run validate:pipeline",
    "pretest": "npm run validate:pipeline"
  },
  "keywords": [
    "video",
    "instagram",
    "tiktok",
    "ai",
    "analysis",
    "chrome-extension"
  ],
  "author": "JUNSOOCHO",
  "license": "MIT",
  "dependencies": {
    "@distube/ytdl-core": "^4.16.12",
    "@google/generative-ai": "^0.24.1",
    "axios": "^1.6.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "ffmpeg-static": "^5.2.0",
    "ffprobe-static": "^3.1.0",
    "form-data": "^4.0.4",
    "googleapis": "^126.0.1",
    "mongodb": "^6.19.0",
    "mongoose": "^8.18.0",
    "multer": "^1.4.5-lts.1",
    "node-fetch": "^3.3.2",
    "sharp": "^0.32.6",
    "ytdl-core": "^4.11.5"
  },
  "devDependencies": {
    "@types/express": "^5.0.3",
    "@types/jest": "^30.0.0",
    "@types/mongoose": "^5.11.96",
    "@types/node": "^24.5.2",
    "copy-webpack-plugin": "^11.0.0",
    "jest": "^30.1.1",
    "kill-port": "^2.0.1",
    "supertest": "^7.1.4",
    "typescript": "^5.9.2",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4"
  }
}
