# 서버 설정
PORT=3000

# 구글 API 설정 (방법 1: 서비스 계정 - 추천)
GOOGLE_SERVICE_ACCOUNT_KEY={"type":"service_account","project_id":"your-project-id"...}

# 구글 API 설정 (방법 2: OAuth - 대안)
# credentials.json과 token.json 파일을 config/ 폴더에 넣으세요

# Gemini API 설정 (방법 3: 단순 API 키 - 간단)
USE_GEMINI=true
GOOGLE_API_KEY=your-primary-gemini-api-key

# 추가 API 키들 (multi-pro 전략 사용 시)
GOOGLE_API_KEY_2=your-secondary-gemini-api-key-1
GOOGLE_API_KEY_3=your-secondary-gemini-api-key-2
GOOGLE_API_KEY_4=your-secondary-gemini-api-key-3
# ... 최대 GOOGLE_API_KEY_10까지 가능

# === AI 시스템 선택 (둘 중 하나만 설정) ===

# 방법 1: Enhanced Multi API 시스템 (권장)
# - 여러 API 키 지원 + 고급 전략
GEMINI_FALLBACK_STRATEGY=multi-pro  # 또는 'flash'
# 이 설정이 있으면 USE_HYBRID_GEMINI는 자동으로 무시됨

# 방법 2: 기존 하이브리드 시스템 (단순)  
# - API 키 1개로 Pro → Flash 전환
# USE_HYBRID_GEMINI=true
# GEMINI_FALLBACK_STRATEGY는 설정하지 마세요

# 방법 3: 단일 모델 방식
# - 둘 다 설정하지 않으면 gemini-2.5-pro만 사용

# 카테고리 분석 설정
USE_DYNAMIC_CATEGORIES=true
USE_SELF_LEARNING_CATEGORIES=false

# 업로드 설정
MAX_FILE_SIZE=50mb
CLEANUP_DAYS=7

# 로그 설정
LOG_LEVEL=info