# 서버 설정
PORT=3000

# 구글 API 설정 (방법 1: 서비스 계정 - 추천)
GOOGLE_SERVICE_ACCOUNT_KEY={"type":"service_account","project_id":"your-project-id"...}

# 구글 API 설정 (방법 2: OAuth - 대안)
# credentials.json과 token.json 파일을 config/ 폴더에 넣으세요

# Gemini API 설정 (방법 3: 단순 API 키 - 간단)
USE_GEMINI=true
GOOGLE_API_KEY=your-gemini-api-key-here

# 카테고리 분석 설정
USE_DYNAMIC_CATEGORIES=true
USE_SELF_LEARNING_CATEGORIES=false

# 업로드 설정
MAX_FILE_SIZE=50mb
CLEANUP_DAYS=7

# 로그 설정
LOG_LEVEL=info