<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- 헤더 섹션 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginBottom="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="🎬 InsightReel"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#1976d2"
                android:layout_marginBottom="5dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Content Analytics Platform"
                android:textSize="12sp"
                android:textColor="#666666" />

        </LinearLayout>

        <!-- 상태 표시 -->
        <LinearLayout
            android:id="@+id/statusContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#e8f5e8"
            android:padding="10dp"
            android:layout_marginBottom="10dp"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/statusIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="✅"
                android:textSize="16sp"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/statusText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="서버 연결됨"
                android:textSize="14sp"
                android:textColor="#2e7d32" />

        </LinearLayout>

        <!-- URL 정보 카드 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#f9f9f9"
            android:padding="15dp"
            android:layout_marginBottom="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="📎 공유할 영상"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#333333"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/urlText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="https://youtube.com/watch?v=example"
                android:textSize="12sp"
                android:textColor="#666666"
                android:ellipsize="middle"
                android:singleLine="true" />

            <TextView
                android:id="@+id/platformText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="YouTube"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="#1976d2"
                android:layout_marginTop="5dp" />

        </LinearLayout>

        <!-- 통계 섹션 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="15dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:background="#f9f9f9"
                android:padding="15dp"
                android:layout_marginEnd="5dp"
                android:gravity="center">

                <TextView
                    android:id="@+id/totalVideos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="23"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#1976d2" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="저장된 영상"
                    android:textSize="12sp"
                    android:textColor="#666666" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:background="#f9f9f9"
                android:padding="15dp"
                android:layout_marginStart="5dp"
                android:gravity="center">

                <TextView
                    android:id="@+id/todayVideos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#1976d2" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="오늘 저장"
                    android:textSize="12sp"
                    android:textColor="#666666" />

            </LinearLayout>

        </LinearLayout>

        <!-- 현재 설정 미리보기 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#f5f5f5"
            android:padding="15dp"
            android:layout_marginBottom="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="⚙️ 현재 설정"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#333333"
                android:layout_marginBottom="10dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="📊 분석 타입:"
                    android:textSize="13sp"
                    android:textColor="#666666"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:id="@+id/analysisTypeText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="영상 분석만"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:textColor="#1976d2" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="🤖 AI 분석:"
                    android:textSize="13sp"
                    android:textColor="#666666"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="활성화"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:textColor="#2e7d32" />

            </LinearLayout>

        </LinearLayout>

        <!-- 버튼 섹션 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/buttonCancel"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:text="취소"
                android:textSize="14sp"
                android:textColor="#333333"
                android:background="#f5f5f5"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/buttonConfirm"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:text="📤 전송"
                android:textSize="14sp"
                android:textColor="#FFFFFF"
                android:background="#1976d2"
                android:layout_marginStart="8dp" />

        </LinearLayout>

        <!-- 설정 링크 -->
        <TextView
            android:id="@+id/settingsLink"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="⚙️ 상세 설정 변경하기"
            android:textSize="12sp"
            android:textColor="#1976d2"
            android:gravity="center"
            android:padding="10dp"
            android:layout_marginTop="10dp"
            android:background="?android:attr/selectableItemBackground" />

    </LinearLayout>

</ScrollView>